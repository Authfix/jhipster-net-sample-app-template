{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist/out-tsc",
        "lib": ["es7", "dom"],
        "typeRoots": ["node_modules/@types"],
        "baseUrl": "./",
        "paths": {
            "app/*": ["app/*"]
        },
        "importHelpers": true,
        "allowJs": true
    },
    "exclude": ["node_modules"]
}
