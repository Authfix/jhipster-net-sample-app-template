{
    "Serilog": {
        "MinimumLevel": "Debug",
        "Override": {
            "Default": "Information",
            "Microsoft": "Information",
            "System": "Information"
        },
        "Enrich": ["FromLogContext", "WithProcessId", "WithThreadId"],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u4} {ProcessId} --- [{ThreadId,3}] {LoggerName,-40} : {Message:lj}{NewLine}{Exception}"
                },
                "Name": "File",
                "Args": {
                    "path":"app.log",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u4} {ProcessId} --- [{ThreadId,3}] {LoggerName,-40} : {Message:lj}{NewLine}{Exception}",
                    "fileSizeLimitBytes": 10240,
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 90
                }
            }
        ]
    },
    "AllowedHosts": "*",
    "EntityFramework": {
        "DataSource": ":memory:"
    },
    "jhipster": {
        "Security": {
            "Authentication": {
                "Jwt": {
                    "Base64Secret": "bXktc2VjcmV0LWtleS13aGljaC1zaG91bGQtYmUtY2hhbmdlZC1pbi1wcm9kdWN0aW9uLWFuZC1iZS1iYXNlNjQtZW5jb2RlZAo=",
                    "TokenValidityInSeconds": 86400,
                    "TokenValidityInSecondsForRememberMe": 2592000
                }
            }
        }
    }
}
